@model List<GymAnubisNetF.Models.ViewModels.ClienteViewModel>
@{
    ViewBag.Title = "Home Page";
}


<div class="container mx-auto text-center" style="width: 400px;">
    <div>
        <h2>Dashboard</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm">
                <div class="card m-2" style="width: 18rem;">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4 d-flex justify-content-center align-items-center">
                                <i class="fa fa-users"></i>
                            </div>
                            <div class="col-6 d-flex justify-content-center">
                                <h6 class="card-subtitle mb-2 text-muted">Clientes registrados</h6>
                            </div>
                            <div class="col-2 d-flex justify-content-center text-center align-items-center">
                                <h6 class="card-subtitle mb-2 text-muted">@ViewBag.CountCustomer</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <div class="card m-2" style="width: 18rem;">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4 d-flex justify-content-center align-items-center">
                                <i class="fa fa-user"></i>
                            </div>
                            <div class="col-6 d-flex justify-content-center">
                                <h6 class="card-subtitle mb-2 text-muted">Empleados registrados</h6>
                            </div>
                            <div class="col-2 d-flex justify-content-center text-center align-items-center">
                                <h6 class="card-subtitle mb-2 text-muted">7</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <div class="card m-2" style="width: 18rem;">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4 d-flex justify-content-center align-items-center">
                                <i class="fa fa-shopping-cart"></i>
                            </div>
                            <div class="col-6 d-flex justify-content-center">
                                <h6 class="card-subtitle mb-2 text-muted">Ventas registradas</h6>
                            </div>
                            <div class="col-2 d-flex justify-content-center text-center align-items-center">
                                <h6 class="card-subtitle mb-2 text-muted"></h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>