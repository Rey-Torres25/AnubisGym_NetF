        });
        var table = $('#Lista_tabla').DataTable({
            responsive: "true",
            dom: 'Blfrtip',
            columnDefs: [{
                render: $.fn.dataTable.render.moment('yyyy-MM-DD HH:mm:ss.SSS', 'YYYY-MM-DD'),
                targets: 4
