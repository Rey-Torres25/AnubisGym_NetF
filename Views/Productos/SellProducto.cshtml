                <div class="row justify-content-center">
                    <div class="table-responsive">
                        <table id="mytable" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Cliente</th>
                                    <th>Producto</th>
                                    <th>Precio</th>
                                    <th>Cantidad</th>
                                    <th>Total unitario</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="tablita">
                            </tbody>
