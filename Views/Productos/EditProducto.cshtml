@model GymAnubisNetF.Models.ViewModels.EditProductoViewModel
@{
    ViewBag.Title = "Editar Producto";
}

<div class="container mx-auto text-center" style="width: 400px;">
    <h2>Actualizar Producto</h2>
</div>

<div class="container">
    <div class="row" style="width: 100%;">
        <div class="col-md-6 offset-md-3">
            <div class="card text-center">
                @using (Html.BeginForm("EditProducto", "Productos", FormMethod.Post, new { role = "form", @class = "" }))
                {
                    @Html.HiddenFor(d => d.Id)
                    @Html.AntiForgeryToken()

                    @Html.ValidationMessage("Error", new { @class = "text-danger" })

                    <div class="form-group mt-1">
                        @Html.LabelFor(d => d.NombreProd, new { @class = "form-label" })
                        @Html.TextBoxFor(d => d.NombreProd, new { @class = "form-control mx-auto", style = "Text-align:Center" })
                        <strong>@Html.ValidationMessage("Nombre del producto", new { @class = "text-danger" })</strong>
                    </div>


                    <div class="form-group mt-1">
                        @Html.LabelFor(d => d.Stock, new { @class = "form-label" })
                        @*@Html.TextBoxFor(d => d.Stock, new { @class = "form-control mx-auto", style = "Text-align:Center", disabled = "disabled" })*@
                        @Html.TextBoxFor(d => d.Stock, new { @class = "form-control mx-auto", style = "Text-align:Center" })
                        <strong>@Html.ValidationMessage("Cantidad de producto", new { @class = "text-danger" })</strong>
                    </div>


                    <div class="form-group mt-1">
                        @Html.LabelFor(d => d.Precio, new { @class = "form-label" })
                        @*@Html.TextBoxFor(d => d.Precio, new { @class = "form-control mx-auto", style = "Text-align:Center", disabled = "disabled" })*@
                        @Html.TextBoxFor(d => d.Precio, new { @class = "form-control mx-auto", style = "Text-align:Center" })
                        <strong>@Html.ValidationMessage("Precio de producto", new { @class = "text-danger" })</strong>
                    </div>

                    if (ViewBag.Alert2 != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show m-2" role="alert">
                            <strong>Aviso!</strong> @ViewBag.Alert2
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="m-2">
                        <button type="submit" class="btn btn-success" @*data-bs-toggle="modal" data-bs-target="#exampleModal"*@>Actualizar</button>
                    </div>

                    @*<button type="submit" class="btn btn-success">Actualizar</button>*@

                     @*<div class="modal fade" id="exampleModal" data-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                         <div class="modal-dialog">
                             <div class="modal-content">
                                 <div class="modal-header">
                                     <h5 class="modal-title" id="exampleModalLabel">Título del modal</h5>
                                     <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                 </div>
                                 <div class="modal-body">
                                     ...
                                 </div>
                                 <div class="modal-footer">
                                     <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                     <button type="button" class="btn btn-primary">Guardar cambios</button>
                                 </div>
                             </div>
                         </div>
                     </div>*@
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

}