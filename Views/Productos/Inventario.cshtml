    <script>
    function deleteFetch(id) {
        if (confirm("¿Estas seguro de eliminarlo?")) {
            url = "@Url.Content("~/Productos/DeleteProducto")"+"/"+id;
            $.post(url, function (data) {
                if (data == "1") {
