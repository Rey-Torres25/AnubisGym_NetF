@model List<GymAnubisNetF.Models.TableViewModels.ProductoTableViewModel>
@{
    ViewBag.Title = "Inventario";
}

<div class="container mx-auto text-center" style="width: 400px;">
    <h2>Inventario</h2>
</div>

<div class="container m-2">
    <div class="row">
        <div class="col-sm-4 m-1">
            Fecha de inicio: <input type="text" id="min" name="min">
        </div>
        <div class="col-sm-4 m-1">
            Fecha de fin: <input type="text" id="max" name="max">
        </div>
    </div>
    <div class="container mt-4">
        <table id="Lista_tabla" class="table table-bordered table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Fecha de registro</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var oItem in Model)
                {
                    <tr>
                        <th>@oItem.Id</th>
                        <td>@oItem.NombreProd</td>
                        <td>@oItem.Stock</td>
                        <td>@oItem.Precio</td>
                        <td>@oItem.FechaRegistro</td>
                        <td>
                            <div class="container">
                                <input type="button" class="btn btn-primary m-1" value="Editar" onclick="document.location.href = '@Url.Content("~/Productos/EditProducto/"+oItem.Id)'" />
                                <input type="button" class="btn btn-danger m-1" value="Eliminar" onclick="deleteFetch(@oItem.Id);" />
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

