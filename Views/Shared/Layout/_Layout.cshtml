<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render()
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @*<div class="col-md-2 CustomLeftnavbar">
            @{Html.RenderPartial("~/Views/Shared/_Sidebar.cshtml");}
        </div>*@
    <div id="wrapper">
        <!-- Sidebar -->


        <div id="sidebar-wrapper">
            <br />
            <ul class="sidebar-nav">
                <li class="sidebar-brand"><a href="#">ANUBIS GYM</a></li>
                <li class="sidebar-brand"><a href="#">Bienvenido(a) @Session["Nombre"]</a></li>
                <li>
                    <a href="@Url.Action("Index", "Productos")">
                        <span class="glyphicon glyphicon-off"><i class="fa fa-shopping-cart"></i></span>
                        Productos
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("RegistroCliente", "Registros")">
                        <span class="glyphicon glyphicon-off"><i class="fa fa-users"></i></span>

                        Clientes
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("RegistroEmpleado", "Registros")">
                        <span class="glyphicon glyphicon-off"><i class="fa fa-user"></i></span>
                        Empleados
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("RegistroEntrada", "Registros")">
                        <span class="glyphicon glyphicon-off"></span>
                        <i class="fa fa-dot-circle-o"></i>
                        Registro de entrada
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("RegistroEquipo", "Registros")">
                        <span class="glyphicon glyphicon-off"><i class="fa fa-gears"></i></span>
                        Registro de equipo
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("logoff", "Access")">
                        <span class="glyphicon glyphicon-off"><i class="fa fa-sign-out"></i></span>
                        Cerrar Sesion
                    </a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle" style="border-color:gray;">
                            <i class="fa fa-bars"></i>
                        </a>
                        <br />
                        <div class="container body-content">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/gasparesganga-jquery-loading-overlay@2.1.7/dist/loadingoverlay.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>
